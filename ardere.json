{
  "ecs_name": "rpapa-demo",
  "name": "shavar: 4x node attack cluster",
  "description": "4 boxes",
  "metrics_options": {
    "enabled": true,
    "dashboard": {
        "admin_user": "admin",
        "admin_password": "testing",
        "name": "molotov-shavar",
        "filename": "gf_basic_dashboard.json"
    }
  },
  "steps": [
    {
      "name": "Shavar: Test Cluster",
      "instance_count": 4,
      "instance_type": "m3.medium",
      "run_max_time": 600,
      "run_delay": 0,
      "container_name": "rpappalax/shavar-loadtests:latest",
      "cmd": "molotov -c -p 1 -d 300 -w 10 loadtest.py",
      "env": [
	"URL_SERVER=https://shavar.stage.mozaws.net/downloads",
	"CONNECTIONS=100",
	"TEST_DURATION=600"
      ],
      "docker_series": "shavar_loadtests"
    }
  ]
}
